# Navidrome Configuration
NAVIDROME_URL=http://navidrome:4533

# Use username/password (will login to get token)
NAVIDROME_USERNAME=your_navidrome_username
NAVIDROME_PASSWORD=your_password

# AI Configuration
# Options: openrouter, ollama
AI_PROVIDER=openrouter
AI_BASE_URL=https://openrouter.ai/api/v1/chat/completions

# OpenRouter Configuration (when AI_PROVIDER=openrouter)
# Set AI_BASE_URL to: https://openrouter.ai/api/v1/chat/completions
AI_API_KEY=your_openrouter_api_key_here
AI_MODEL=anthropic/claude-haiku-4.5

# Ollama Configuration (when AI_PROVIDER=ollama)
# Set AI_BASE_URL to your Ollama instance:
# - Local without Docker: http://localhost:11434/v1/chat/completions
# - Local with Docker: http://host.docker.internal:11434/v1/chat/completions
# - Remote Ollama: http://192.168.1.100:11434/v1/chat/completions
OLLAMA_MODEL=llama3.2

# Music Path (for Docker Compose)
MUSIC_PATH=/path/to/your/music/library

# Database Configuration
DATABASE_PATH=./magiclists.db

# Logging Configuration (ERROR=minimal, INFO=normal, DEBUG=verbose)
LOG_LEVEL=INFO

# Set the ID of the Navidrome library to use (optional)
# Leave empty to use the default library
NAVIDROME_LIBRARY_ID=